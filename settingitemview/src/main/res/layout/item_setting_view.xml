<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base_setting_item_height">

  <TextView
      android:id="@+id/setting_base_item_title"
      android:maxLines="1"
      android:includeFontPadding="false"
      android:textSize="@dimen/base_setting_item_textSize"
      android:layout_marginLeft="@dimen/base_setting_item_marginLeft"
      android:layout_centerVertical="true"
      android:textColor="@color/black87"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  <ImageView
      android:id="@+id/setting_base_item_iv"
      android:layout_marginRight="@dimen/base_setting_item_line_marginLeft"
      android:layout_centerVertical="true"
      android:layout_alignParentRight="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <me.mafei.settingitemview.CustomColorSwitchCompat
        android:id="@+id/setting_base_item_switch"
        android:layout_marginRight="@dimen/base_setting_item_switch_marginRight"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:clickable="false"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

  <TextView
      android:id="@+id/setting_base_item_memory"
      android:layout_toLeftOf="@id/setting_base_item_iv"
      android:layout_marginRight="@dimen/base_setting_insise_text_marginRight"
      android:textSize="@dimen/base_setting_item_textSize"
      android:layout_centerVertical="true"
      android:textColor="@color/black40"
      android:maxLines="1"
      android:visibility="gone"
      android:includeFontPadding="false"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
</merge>